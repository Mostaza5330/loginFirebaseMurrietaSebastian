<?xml version="1.0" encoding="utf-8"?>
<!-- themes.xml (night) -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema oscuro -->
    <style name="Theme.PracticaAutenticacion" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colores primarios -->
        <item name="colorPrimary">@color/primary_green_light</item>
        <item name="colorPrimaryVariant">@color/primary_green</item>
        <item name="colorOnPrimary">@color/black</item>
        
        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/secondary_green_light</item>
        <item name="colorSecondaryVariant">@color/secondary_green</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Colores de superficie -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        <item name="colorOnBackground">@color/text_primary_dark</item>
        
        <!-- Colores de texto -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        
        <!-- Colores de error -->
        <item name="colorError">@color/error_dark</item>
        <item name="colorOnError">@color/black</item>
        
        <!-- Estilo de la barra de estado -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
    
    <!-- Estilos para modo oscuro -->
    <style name="TitleText">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_green_light</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>
    
    <style name="ErrorText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/error_dark</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textStyle">italic</item>
    </style>
</resources>
